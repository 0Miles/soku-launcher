<Window x:Class="SokuLauncher.Controls.UpdatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource UpdatingWindow-Title}" Height="100" Width="380" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True"
        Loaded="Window_Loaded">
    <StackPanel>
        <ProgressBar Value="{Binding Progress}" IsIndeterminate="{Binding IsIndeterminate}"  HorizontalAlignment="Stretch" Height="20" VerticalAlignment="Center" Margin="8,8,8,0"/>
        <TextBlock Text="{Binding Status }" Margin="8" />
    </StackPanel>
</Window>
